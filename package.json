    "generate-library": "python3 scripts/generate_library.py",
    "enhance-sources": "python3 scripts/enhance_sources.py",
    "validate-kb": "python3 scripts/validate_kb.py",
    "build-provenance": "python3 scripts/build_provenance.py",
    "monitor-whatsapp": "python3 scripts/monitor_whatsapp.py",
    "self-test": "python3 scripts/self_test.py",
    "test-mcp": "node server/test-mcp-server.js",
